<%= render layout: "devise/shared/layout", locals: { title: "Forgot your password?" } do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "px-8 pt-8 pb-4 text-lg" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-6 mt-4">
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-1 block w-full rounded bg-gray-50 border-2 border-gray-400 focus:border-gray-800 focus:outline-0 text-gray-700" %>
    </div>

    <div class="actions mb-4">
      <%= f.submit "Send me reset password instructions", class: "w-full px-3 py-2 rounded text-white bg-gray-600 hover:bg-gray-700" %>
    </div>
  <% end %>
<% end %>
