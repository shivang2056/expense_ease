<%= render layout: "devise/shared/layout", locals: { title: "Sign In" } do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "px-8 pt-8 pb-4 text-lg" }) do |f| %>
    <div class="field mb-6 mt-4">
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-1 block w-full rounded bg-gray-50 border-2 border-gray-400 focus:border-gray-800 focus:outline-0 text-gray-700" %>
    </div>

    <div class="field mb-6">
      <%= f.label :password, class: "block text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-1 block w-full rounded bg-gray-50 border-2 border-gray-400 focus:border-gray-800 focus:outline-0 text-gray-700" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-6 text-base">
        <%= f.check_box :remember_me, class: "form-checkbox h-5 w-5 text-gray-600" %>
        <%= f.label :remember_me, class: "ml-2 text-gray-700" %>
      </div>
    <% end %>

    <div class="actions mb-4">
      <%= f.submit "Log in", class: "w-full px-3 py-2 rounded text-white bg-gray-600 hover:bg-gray-700" %>
    </div>
  <% end %>
<% end %>
