<%= render layout: "devise/shared/layout", locals: { title: "Edit #{resource_name.to_s.humanize}" } do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "px-8 pt-8 pb-4 text-lg" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-6 mt-4">
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-1 block w-full rounded bg-gray-50 border-2 border-gray-400 focus:border-gray-800 focus:outline-0 text-gray-700" %>
    </div>

    <div class="field mb-6">
      <%= f.label :password, class: "block text-gray-700" %> <i>(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
        <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 p-1 block w-full rounded bg-gray-50 border-2 border-gray-400 focus:border-gray-800 focus:outline-0 text-gray-700" %>
    </div>

    <div class="field mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 p-1 block w-full rounded bg-gray-50 border-2 border-gray-400 focus:border-gray-800 focus:outline-0 text-gray-700" %>
    </div>

    <div class="field mb-6">
      <%= f.label :current_password, class: "block text-gray-700" %><i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 p-1 block w-full rounded bg-gray-50 border-2 border-gray-400 focus:border-gray-800 focus:outline-0 text-gray-700" %>
    </div>

    <div class="actions mb-4">
      <%= f.submit "Update", class: "w-full px-3 py-2 rounded text-white bg-gray-600 hover:bg-gray-700" %>
    </div>

    <div class="actions mb-4">
      <%= link_to "Back", :back, class: "w-full px-3 py-2 rounded text-white bg-gray-400 hover:bg-gray-700" %>
    </div>
  <% end %>
<% end %>
