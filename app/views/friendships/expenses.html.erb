<% content_for :heading do %>
  <%= @friend.name %>
<% end %>

<%= render layout: "layouts/main_layout" do %>
  <div class="basis-full border">
    <% @grouped_expenses.each do |grouped_expense| %>
      <div>
        <div class="bg-gray-200 text-gray-600 h-8 text-sm p-1 pl-2">
          <%= grouped_expense[0] %>
        </div>

        <% grouped_expense[1].each do |detail| %>
          <div class="h-16 border-b-2 flex">
            <div class="basis-7/12 flex">
              <div class="basis-1/12 text-gray-700 p-3">
                <div class="text-xs text-center"><%= detail[:created_month] %></div>
                <div class="text-2xl leading-5"><%= detail[:created_date] %></div>
              </div>

              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 -3 24 24" stroke-width="1.2" stroke="currentColor" class="basis-1/12 w-8 h-14">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
              </svg>

              <div class="basis-10/12 text-lg p-4">
                <%= detail[:description] %>
              </div>
            </div>

            <div class="basis-5/12 flex">
              <div class="basis-1/2 text-gray-700 text-right py-2 px-4">
                <div class="text-xs"><%= detail[:paid_label] %></div>
                <div class="text-2xl leading-5">$<%= detail[:paid_amount] %></div>
              </div>
              <div class="basis-1/2 text-gray-700 text-left py-2 px-4">
                <div class="text-xs"><%= detail[:lent_label] %></div>
                <div class="text-2xl leading-5">$<%= detail[:lent_amount] %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
